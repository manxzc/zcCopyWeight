<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_radius_10_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dimen20"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginBottom="@dimen/dimen20"
        android:paddingRight="@dimen/dimen20"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_p1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_30dp"
        android:layout_marginTop="@dimen/size_16dp"
        android:gravity="center"
        android:text="名称："
        android:textColor="@color/color_333333"
        android:textSize="@dimen/size_18sp"
        ></TextView>
        <EditText
            android:id="@+id/ed_p1"
            android:layout_marginTop="@dimen/size_16dp"
            android:textColor="@color/color_666666"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></EditText>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/size_20dp"
        android:background="@color/clr_gray_line"></View>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dialog_promapt_cancle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/size_40dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_20sp"></TextView>
    <View
        android:layout_width="1px"
        android:layout_height="match_parent">
    </View>
    <TextView
        android:id="@+id/dialog_promapt_ack"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/size_40dp"
        android:gravity="center"
        android:text="确定"
        android:background="@drawable/shape_radius_bottom_right_blue"
        android:textColor="@color/white"
        android:textSize="@dimen/size_20sp"></TextView>
</LinearLayout>

</LinearLayout>
